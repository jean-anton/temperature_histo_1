    "version": "0.2.0",
    "configurations": [
        {
            "name": "aeroclim (chrome 8082)",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome",
                "--web-port",
                "8082",
                "--web-browser-flag",
                "--user-data-dir=chrome_data"
            ]
        },
        {
            "name": "aeroclim (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "aeroclim (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}